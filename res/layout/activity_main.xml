<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/changeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Value: "
            android:layout_margin="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
        <TextView
            android:id="@+id/checkLocation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위도 : lat\n경도 : lon"
            android:layout_margin="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
        <TextView
            android:id="@+id/speed_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="속도: "
            android:layout_margin="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

    </LinearLayout>



    <Button
        android:id="@+id/get_location_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="위치 탐색"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/checkBus_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_margin="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
    </LinearLayout>

    <Button
        android:id="@+id/startBus_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="운행 시작"/>
    <Button
        android:id="@+id/endBus_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="운행 종료"/>

</LinearLayout>